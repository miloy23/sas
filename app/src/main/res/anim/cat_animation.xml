<!-- cat_animation.xml -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
            android:fromXScale="0.5"
            android:fromYScale="0.5"
            android:toXScale="1"
            android:toYScale="1"
            android:duration="500"
            android:pivotX="50%"
            android:pivotY="50%" />
    <alpha
            android:fromAlpha="0"
            android:toAlpha="1"
            android:duration="500" />
</set>
