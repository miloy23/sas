<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainGameActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:background="@drawable/bg"
            tools:context=".MainMathGame"
            app:layout_constraintTop_toBottomOf="@id/score_text_view"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/number1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:text="1"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/operatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@id/number1TextView"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/number2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:text="1"
                android:layout_toEndOf="@+id/operatorTextView"
                android:layout_marginStart="22dp"
                android:layout_marginTop="-63dp"
                android:layout_below="@id/number1TextView"/>
        <TextView
                android:id="@+id/equal_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="72sp"
                android:text="="
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@id/number2TextView"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"/>

        <EditText
                android:id="@+id/resultEditText"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:hint="?"
                android:textSize="24sp"
                android:layout_toEndOf="@id/equal_sign"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-57dp"
                android:layout_below="@id/number1TextView"/>
        <Button
                android:id="@+id/checkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#FF4081"
                android:layout_marginTop="16dp"
                android:layout_below="@id/resultEditText"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
